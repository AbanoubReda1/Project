@model IEnumerable<StudentService.Models.Project>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
<div class="form-group col-lg-3">

    @Html.DropDownList("projectlist", null, htmlAttributes: new { @class = "form-control" })
</div>

    
    
    <div class="form-group  col-lg-3">

        <input type="submit" value="Search" class="btn btn-default" />

    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Abstract)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Professor)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abstract)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Professor)
            </td>

        </tr>
    }

</table>
